{
  "name": "storion-monorepo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "pnpm --filter storion build",
    "build:all": "pnpm -r build",
    "typecheck": "pnpm -r build:check",
    "test": "pnpm --filter storion test",
    "test:all": "pnpm -r test",
    "dev": "pnpm --filter storion dev",
    "dev:expense": "pnpm --filter expense-manager dev",
    "dev:showcase": "pnpm --filter feature-showcase dev",
    "dev:pokemon": "pnpm --filter pokemon dev",
    "dev:chat": "pnpm --filter chat dev",
    "dev:all": "pnpm --filter storion --filter expense-manager dev",
    "bench": "pnpm --filter @storion/performance bench"
  },
  "devDependencies": {
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "packageManager": "pnpm@9.7.0"
}
